{
    "tasks": [
        {
            "version": "2.0.0",
            "tasks": [
                {
                    "label": "build all C++ files",
                    "type": "shell",
                    "command": "g++",
                    "args": [
                        "-std=c++17",
                       "$(find . -name '*.cpp')",  // 使用 shell 命令展开所有 .cpp 文件
                       "$(find . -name '*.c')",    // 使用 shell 命令展开所有 .c 文件
                        "-o", "${fileBasenameNoExtension}.bin",  // 输出的可执行文件名
                        "-Wall"  // 启用警告信息
                    ],
                    "group": {
                        "kind": "build",
                        "isDefault": true
                    },
                    "problemMatcher": ["$gcc"],
                    "detail": "Compiles all C++ and C source files"
                }
            ]
        }
    ],
    "version": "2.0.0"
}